<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/bg_row"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:background="@color/colorPrimary"
        android:layout_margin="5dp"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:orientation="vertical"
            android:background="#FFFFFF">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardBackgroundColor="#ddd">

                <ImageView
                    android:id="@+id/image_row"
                    android:layout_width="match_parent"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/score_row"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|top"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DARK"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:textColor="#000000"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/date_row"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="17-7-2020"
                    android:textSize="7sp"
                    android:textColor="#000000"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Overview : "
                    android:textSize="10sp"
                    android:textColor="#000000"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:id="@+id/overview_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A missing child causes four families to help each "
                    android:textSize="10sp"
                    android:textColor="#000000"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"/>

            </LinearLayout>




        </LinearLayout>

    </RelativeLayout>
</layout>